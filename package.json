{
  "name": "aculich-gcp-billing-watcher",
  "displayName": "Google Cloud Billing Watcher (aculich)",
  "description": "%description%",
  "version": "0.4.0",
  "publisher": "aculich",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aculich/gcp-billing-watcher.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gcpBilling.refresh",
        "title": "%command.refresh.title%"
      },
      {
        "command": "gcpBilling.menu",
        "title": "%command.menu.title%"
      },
      {
        "command": "gcpBilling.openConsole",
        "title": "%command.openConsole.title%"
      },
      {
        "command": "gcpBilling.showLogs",
        "title": "%command.showLogs.title%"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "gcpBilling.projectId": {
          "type": "string",
          "default": "",
          "description": "%config.projectId.description%",
          "order": 1
        },
        "gcpBilling.datasetId": {
          "type": "string",
          "default": "billing_export",
          "description": "%config.datasetId.description%",
          "order": 2
        },
        "gcpBilling.credentialsPath": {
          "type": "string",
          "default": "",
          "description": "%config.credentialsPath.description%",
          "order": 3
        },
        "gcpBilling.refreshIntervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "description": "%config.refreshIntervalMinutes.description%",
          "order": 4
        },
        "gcpBilling.monthlyBudget": {
          "type": "number",
          "default": 0,
          "description": "%config.monthlyBudget.description%",
          "order": 5
        },
        "gcpBilling.language": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "en",
            "ja"
          ],
          "enumDescriptions": [
            "%config.language.auto%",
            "%config.language.en%",
            "%config.language.ja%"
          ],
          "description": "%config.language.description%",
          "order": 6
        },
        "gcpBilling.skipSslVerification": {
          "type": "boolean",
          "default": false,
          "description": "%config.skipSslVerification.description%",
          "order": 7
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx vsce package --out release/"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "google-auth-library": "^9.0.0"
  }
}
